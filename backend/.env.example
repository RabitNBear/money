# ==================== Database ====================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ggeulmuse?schema=public"

# ==================== JWT ====================
JWT_SECRET="your-super-secret-jwt-key-change-in-production-32chars"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ==================== OAuth - Google ====================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/auth/google/callback"

# ==================== OAuth - Kakao ====================
KAKAO_CLIENT_ID="your-kakao-client-id"
KAKAO_CLIENT_SECRET="your-kakao-client-secret"
KAKAO_CALLBACK_URL="http://localhost:3001/auth/kakao/callback"

# ==================== Redis (Optional) ====================
REDIS_HOST="localhost"
REDIS_PORT=6379

# ==================== Server ====================
PORT=3001
NODE_ENV=development

# ==================== Frontend URL (CORS) ====================
FRONTEND_URL="http://localhost:3000"

# ==================== Security ====================
# 32 bytes encryption key (64 hex characters)
ENCRYPTION_KEY="your-64-character-hex-encryption-key"

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Login Security
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCK_TIME=300
