generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  password       String?
  name           String?
  profileImage   String?
  provider       Provider       @default(LOCAL)
  providerId     String?
  deletedAt      DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  role           Role           @default(USER)
  inquiries      Inquiry[]
  loginHistories LoginHistory[]
  notices        Notice[]
  portfolios     Portfolio[]
  schedules      Schedule[]
  watchlists     Watchlist[]

  @@unique([provider, providerId])
  @@index([email])
}

model Portfolio {
  id        String   @id @default(cuid())
  userId    String
  ticker    String
  name      String
  market    Market
  quantity  Int
  avgPrice  Float
  currency  Currency @default(KRW)
  memo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
}

model Watchlist {
  id      String   @id @default(cuid())
  userId  String
  ticker  String
  name    String
  market  Market
  addedAt DateTime @default(now())
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
}

model Schedule {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  date        DateTime
  time        String?
  isAllDay    Boolean  @default(false)
  color       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model Inquiry {
  id         String          @id @default(cuid())
  userId     String
  title      String
  content    String
  category   InquiryCategory
  status     InquiryStatus   @default(PENDING)
  answer     String?
  answeredAt DateTime?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  answeredBy String?
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model Notice {
  id          String         @id @default(cuid())
  title       String
  content     String
  category    NoticeCategory
  isPinned    Boolean        @default(false)
  isPublished Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  authorId    String?
  author      User?          @relation(fields: [authorId], references: [id])

  @@index([isPublished, isPinned])
  @@index([authorId])
}

model IPO {
  id                  String    @id @default(cuid())
  companyName         String
  ticker              String?
  demandForecastStart DateTime?
  demandForecastEnd   DateTime?
  subscriptionStart   DateTime?
  subscriptionEnd     DateTime?
  refundDate          DateTime?
  listingDate         DateTime?
  priceRangeLow       Int?
  priceRangeHigh      Int?
  finalPrice          Int?
  totalShares         Int?
  leadUnderwriter     String?
  status              IPOStatus @default(UPCOMING)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([subscriptionStart])
  @@index([listingDate])
  @@index([status])
}

model EconomicEvent {
  id         String   @id @default(cuid())
  date       DateTime
  time       String?
  country    String
  event      String
  importance String
  forecast   String?
  previous   String?
  actual     String?
  createdAt  DateTime @default(now())

  @@index([date])
  @@index([country])
}

model LoginHistory {
  id        String   @id @default(cuid())
  userId    String
  ip        String
  userAgent String
  country   String?
  city      String?
  success   Boolean
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([ip])
  @@index([createdAt])
}

model SecurityLog {
  id        String   @id @default(cuid())
  action    String
  userId    String?
  ip        String
  userAgent String
  details   String?
  createdAt DateTime @default(now())

  @@index([action])
  @@index([userId])
  @@index([createdAt])
}

model TokenBlacklist {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
}

model EmailVerification {
  id        String           @id @default(cuid())
  email     String
  code      String
  type      VerificationType
  expiresAt DateTime
  verified  Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([email, type])
  @@index([expiresAt])
}

enum Provider {
  LOCAL
  GOOGLE
  KAKAO
}

enum Role {
  USER
  ADMIN
}

enum Market {
  US
  KR
}

enum Currency {
  KRW
  USD
}

enum InquiryCategory {
  GENERAL
  BUG
  FEATURE
  ACCOUNT
  OTHER
}

enum InquiryStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
}

enum NoticeCategory {
  NOTICE
  UPDATE
  EVENT
  MAINTENANCE
}

enum IPOStatus {
  UPCOMING
  SUBSCRIPTION
  COMPLETED
  LISTED
}

enum VerificationType {
  SIGNUP
  PASSWORD
}
